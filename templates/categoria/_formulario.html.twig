{% extends 'base.html.twig' %}

{% block contenedor_principal %}

    {% include 'comunes/_mensajes.html.twig' %}


<form method="POST">
    <div class="form-group">
        <label for="normbe">
        Nombre
        </label>
        <input type="text" class="form-control" value="{{ categoria.nombre }}" name="nombre" id="nombre" placeholder="nombre">
    </div>
    <div class="form-group">
        <label for="color">
        Color
        </label>
        <input type="color" class="form-control" value="{{ categoria.color }}" name="color" id="color" placeholder="color">
    </div>
    <input type="hidden" name="_token" value="{{ csrf_token('categoria') }}">
    <button type="submit" class="btn btn-outline-sucess"> Guardar </button>
    <a href="{{ path('app_listado_categoria')}}" class="btn btn-outline-sucess"> Volver </button>
</form>
{% endblock %}
